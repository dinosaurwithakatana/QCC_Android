<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childrenScrlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/watermarkorange">

    <LinearLayout
        android:id="@+id/children_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/textView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#dfdfdf"
	        android:paddingTop="15dp"
	        android:paddingLeft="15dp"
	        android:textStyle="bold"
	        android:text="Number of Children:"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spnrNumOfChildren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:layout_marginBottom="15dp"
            android:background="#dfdfdf"/>

        <LinearLayout
            android:id="@+id/dynamic_children_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

<!--         <Button -->
<!--             android:id="@+id/btnCreate" -->
<!--             android:layout_width="match_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_weight="1" -->
<!--             android:text="@string/create_account" /> -->

		<Button
	        android:id="@+id/btnCreate"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="30dp"
	        android:layout_marginLeft="25dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginBottom="25dp"
	        android:background="@drawable/orangebutton"
	        android:text="Create Account"
	        style="@style/ButtonTextState"/>
    </LinearLayout>

</ScrollView>